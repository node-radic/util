{
    "compilerOptions": {
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "noResolve": false
    },
    "exclude": [
        "node_modules",
        "gulpfile.ts"
    ]
}
