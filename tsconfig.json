{
    "compilerOptions": {
        "removeComments": true,
        "declaration": false,
        "noLib": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es6", "es2015", "dom"],
        "noResolve": false,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "types": [
            "lodash",
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "gulpfile.ts"
    ],
    "files": [
        "src/index.ts"
    ],
    "include": [
        "spec/**/*.ts"
    ]
}
